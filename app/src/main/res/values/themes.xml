<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EmandiTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="TextViewStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewStyleTotalPrice">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewStylePrice">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/numeric_bg</item>
    </style>

    <style name="TextviewStyleSmall">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">5dp</item>
    </style>


    <style name="TextViewStyleSmallWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewStyleViewAll">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">5dp</item>
    </style>


    <style name="TextviewStyleAmount">
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">5dp</item>
    </style>


</resources>
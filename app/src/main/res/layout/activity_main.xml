<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewmodel"
            type="com.example.emanditask.ProductsViewmodel" />

        <import type="com.example.emanditask.helpers.Mapper" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="24dp" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="80dp" />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        style="@style/TextviewStyle"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toStartOf="@id/textview_all_orders"
        app:layout_constraintTop_toTopOf="@id/guideline3"
        app:layout_constraintBottom_toTopOf="@id/guideline5"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/textview_welcome"/>


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/all_orders"
        style="@style/TextviewStyleViewAll"
        app:layout_constraintStart_toEndOf="@id/textview_welcome"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="@id/guideline3"
        app:layout_constraintBottom_toTopOf="@id/guideline5"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="end"
        android:id="@+id/textview_all_orders"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/layout_list"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toStartOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/guideline5"
        app:layout_constraintBottom_toTopOf="@id/layout_keyboard">

           <androidx.recyclerview.widget.RecyclerView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@color/white"
               android:layout_marginTop="8dp"
               android:layout_marginBottom="8dp"
               android:id="@+id/recycleview"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/layout_keyboard"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toStartOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/layout_list"
        app:layout_constraintBottom_toTopOf="@id/layout_add_to_cart"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:onClick="@{() -> viewmodel.handleClickEvent(1)}"
            android:id="@+id/textview_one"
            style="@style/TextviewStylePrice"
            android:background="@drawable/price_bg"
            android:backgroundTint="@color/colorBlue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="@{() -> viewmodel.handleClickEvent(2)}"
            android:id="@+id/textview_two"
            style="@style/TextviewStylePrice"
            android:background="@drawable/price_bg"
            android:backgroundTint="@color/colorBlue"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="@{() -> viewmodel.handleClickEvent(3)}"
            android:id="@+id/textview_three"
            style="@style/TextviewStylePrice"
            android:background="@drawable/price_bg"
            android:backgroundTint="@color/colorBlue"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:onClick="@{() -> viewmodel.handleClickEvent(4)}"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/textview_four"
            style="@style/TextviewStylePrice"
            android:background="@drawable/price_bg"
            android:backgroundTint="@color/colorBlue"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:onClick="@{() -> viewmodel.handleClickEvent(5)}"
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/textview_five"
            style="@style/TextviewStylePrice"
            android:background="@drawable/price_bg"
            android:backgroundTint="@color/colorBlue"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:onClick="@{() -> viewmodel.handleClickEvent(6)}"
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/textview_six"
            style="@style/TextviewStylePrice"
            android:background="@drawable/price_bg"
            android:backgroundTint="@color/colorBlue"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:onClick="@{() -> viewmodel.handleClickEvent(7)}"
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/textview_seven"
            style="@style/TextviewStylePrice"
            android:background="@drawable/price_bg"
            android:backgroundTint="@color/colorBlue"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="@{() -> viewmodel.handleClickEvent(8)}"
            android:id="@+id/textview_eight"
            style="@style/TextviewStylePrice"
            android:background="@drawable/price_bg"
            android:backgroundTint="@color/colorBlue"
            android:layout_weight="1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:onClick="@{() -> viewmodel.handleClickEvent(9)}"
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/textview_nine"
            style="@style/TextviewStylePrice"
            android:background="@drawable/price_bg"
            android:backgroundTint="@color/colorBlue"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="@{() -> viewmodel.handleClickEvent(0)}"
            android:id="@+id/textview_zero"
            style="@style/TextviewStylePrice"
            android:background="@drawable/price_bg"
            android:backgroundTint="@color/colorBlue"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline4"
        app:layout_constraintEnd_toStartOf="@id/layout_add_to_cart"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_clear"
            android:onClick="@{() -> viewmodel.clearSelectedItem()}"
            android:src="@drawable/ic_clear"
            android:layout_margin="5dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/layout_add_to_cart"
        app:layout_constraintStart_toEndOf="@id/layout_clear"
        app:layout_constraintEnd_toStartOf="@id/guideline2"
        app:layout_constraintBottom_toTopOf="@id/guideline4"
        android:background="@drawable/price_bg">


        <TextView
            android:id="@+id/textview_total_items"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="200 items"
            android:textAllCaps="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textview_add_to_cart"
            app:layout_constraintBottom_toTopOf="@id/textview_price"
            style="@style/TextviewStyleSmallWhite12" />



        <TextView
            android:id="@+id/textview_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_total_items"
            app:layout_constraintEnd_toStartOf="@id/textview_add_to_cart"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/TextviewStylePrice"/>


        <TextView
            android:id="@+id/textview_add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_to_cart"
            android:drawableRight="@drawable/ic_forward"
            android:drawablePadding="5dp"
            android:textAllCaps="true"
            android:onClick="@{()-> viewmodel.navigateAddToCart()}"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/TextviewStyleSmallWhite14" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>